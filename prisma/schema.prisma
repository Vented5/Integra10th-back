generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  character String
  weapon String
}

model HighScore {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  tag   String 
  score Int
  character String @default("doggo")
  weapon String @default("sword")
}
